<h1>Eat-Da-Burger</h1>


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <h2>Available Burgers</h2>

            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div>
                            <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                                <button type="submit" class="burger-available">{{this.burger_name}}</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2>Devoured Burgers</h2>

            <ul>
                {{#each burgers}}
                    {{#if this.devoured}} 
                        <div class="burger-eaten">
                            <div>
                                {{this.burger_name}}
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>


<h2>Add a Burger</h2>

<div class="row">
    <div class="col-sm-12">
        <form action="/api/burgers" method="POST"></form>
        <input type="text" id="burger-name" name="burger_name" placeholder="Tasty Burger Here">
        <button type="submit" class="add-burger-button">Add burger!</button>
    </div>
</div>